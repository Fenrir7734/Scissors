<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!--
<?import org.controlsfx.glyphfont.Glyph?>
-->

<AnchorPane fx:id="mainWindowPane" maxHeight="-Infinity" maxWidth="600.0" minHeight="-Infinity" prefHeight="524.0" prefWidth="600.0" stylesheets="@css/application.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fenrir.scissors.controllers.MainWindowController">
   <children>
      <VBox fx:id="mainWindowVBox" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ButtonBar fx:id="mainButtonBar" buttonMinWidth="24.0" prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="captureButton" maxWidth="90.0" mnemonicParsing="false" onAction="#captureScreen" prefHeight="24.0" prefWidth="90.0" text="Capture " ButtonBar.buttonData="LEFT" />
                  <Button fx:id="settingsButton" maxWidth="90.0" mnemonicParsing="false" onAction="#openSettings" prefWidth="90.0" />
                  <Button fx:id="copyButton" cache="true" disable="true" mnemonicParsing="false" onAction="#copyToClipboard" />
                  <Button fx:id="saveButton" disable="true" maxWidth="90.0" mnemonicParsing="false" onAction="#saveToDefault" prefWidth="90.0" text="Save" />
                  <MenuButton fx:id="saveAsMenuButton" disable="true" maxWidth="90.0" mnemonicParsing="false" prefWidth="90.0" text="Save As">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#saveToLocal" text="Local" />
                      <MenuItem mnemonicParsing="false" onAction="#saveToImgur" text="Upload" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    </items>
                  </MenuButton>
              </buttons>
            </ButtonBar>
            <HBox fx:id="screenNameContainer">
                <TextField fx:id="screenNameField" alignment="CENTER" maxWidth="300.0" prefWidth="300.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
            </HBox>
            <HBox fx:id="toolbox">
               <ToggleButton fx:id="pencilToolButton" mnemonicParsing="false" onAction="#pencilTool" text="ToggleButton">
                  <toggleGroup>
                     <ToggleGroup fx:id="toolboxGroup" />
                  </toggleGroup></ToggleButton>
               <ToggleButton fx:id="markerToolButton" mnemonicParsing="false" onAction="#markerTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="lineToolButton" mnemonicParsing="false" onAction="#lineTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
                <ToggleButton fx:id="arrowToolButton" mnemonicParsing="false" onAction="#arrowTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="rectangleToolButton" mnemonicParsing="false" onAction="#rectangleTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="ellipseToolButton" mnemonicParsing="false" onAction="#ellipseTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
                <ToggleButton fx:id="eraserToolButton" mnemonicParsing="false" onAction="#eraserTool" text="ToggleButton" toggleGroup="$toolboxGroup" />
            </HBox>
            <ScrollPane fx:id="screenshotContainer">
               <content>
                  <StackPane fx:id="canvasContainer" prefHeight="400.0" prefWidth="600.0">
                     <children>
                        <Canvas fx:id="screenshotCanvas" height="400.0" width="600.0" />
                     </children>
                  </StackPane>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
