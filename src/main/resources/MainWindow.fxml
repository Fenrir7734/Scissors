<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
<?import org.controlsfx.glyphfont.Glyph?>
-->

<AnchorPane fx:id="mainWindowPane" maxHeight="-Infinity" minHeight="-Infinity" prefWidth="600.0" stylesheets="@css/application.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fenrir.scissors.controllers.MainWindowController">
   <children>
      <VBox fx:id="mainWindowVBox" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefWidth="600.0">
         <children>
            <ButtonBar fx:id="mainButtonBar" buttonMinWidth="24.0" prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="captureButton" maxWidth="90.0" mnemonicParsing="false" onAction="#onClick" prefHeight="24.0" prefWidth="90.0" text="Capture " ButtonBar.buttonData="LEFT" />
                  <Button fx:id="settingsButton" maxWidth="90.0" mnemonicParsing="false" prefWidth="90.0" />
                  <Button fx:id="copyButton" cache="true" mnemonicParsing="false" />
                  <Button fx:id="saveButton" maxWidth="90.0" mnemonicParsing="false" prefWidth="90.0" text="Save" />
                  <MenuButton fx:id="saveAsMenuButton" maxWidth="90.0" mnemonicParsing="false" prefWidth="90.0" text="Save As">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Local" />
                      <MenuItem mnemonicParsing="false" text="Upload" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    </items>
                  </MenuButton>
              </buttons>
            </ButtonBar>
            <HBox fx:id="screenNameContainer">
                <TextField fx:id="screenNameField" alignment="CENTER" maxWidth="300.0" prefWidth="300.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>
            </HBox>
            <HBox fx:id="toolbox">
               <ToggleButton mnemonicParsing="false" text="ToggleButton">
                  <toggleGroup>
                     <ToggleGroup fx:id="toolboxGroup" />
                  </toggleGroup>
               </ToggleButton>
               <ToggleButton fx:id="pencilToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="markerToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
                <ToggleButton fx:id="blurToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
                <ToggleButton fx:id="arrowToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="rectangleToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="lineToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
               <ToggleButton fx:id="ellipseToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
                <ToggleButton fx:id="eraserToolButton" mnemonicParsing="false" text="ToggleButton" toggleGroup="$toolboxGroup" />
            </HBox>
            <Canvas fx:id="screenDisplay" />
         </children>
      </VBox>
   </children>
</AnchorPane>
